<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@android:color/holo_blue_light"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/menu"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical|start"
        android:text="@string/menu"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stateListAnimator="@animator/scale_animator"
        android:src="@drawable/ic_hill"
        android:id="@+id/low_region"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/middle_region"
        app:layout_constraintBottom_toTopOf="@id/title"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/low_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical|start"
        android:text="@string/region_low"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:shadowColor="@android:color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        app:layout_constraintTop_toTopOf="@id/low_region"
        app:layout_constraintBottom_toBottomOf="@id/low_region"
        app:layout_constraintStart_toStartOf="@id/low_region"
        app:layout_constraintEnd_toEndOf="@id/low_region" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stateListAnimator="@animator/scale_animator"
        android:src="@drawable/ic_desert"
        android:id="@+id/right_region"
        app:layout_constraintTop_toBottomOf="@id/menu"
        app:layout_constraintBottom_toTopOf="@id/title"
        app:layout_constraintStart_toStartOf="@id/middle_region"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintHorizontal_bias="0.8" />

    <TextView
        android:id="@+id/right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical|start"
        android:text="@string/region_right"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:shadowColor="@android:color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintTop_toTopOf="@id/right_region"
        app:layout_constraintBottom_toBottomOf="@id/right_region"
        app:layout_constraintStart_toStartOf="@id/right_region"
        app:layout_constraintEnd_toEndOf="@id/right_region" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stateListAnimator="@animator/scale_animator"
        android:src="@drawable/ic_forest"
        android:id="@+id/left_region"
        app:layout_constraintTop_toBottomOf="@id/menu"
        app:layout_constraintBottom_toTopOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/middle_region"
        app:layout_constraintVertical_bias="0.32"
        app:layout_constraintHorizontal_bias="1" />

    <TextView
        android:id="@+id/left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical|start"
        android:text="@string/region_left"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:shadowColor="@android:color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="@id/left_region"
        app:layout_constraintBottom_toBottomOf="@id/left_region"
        app:layout_constraintStart_toStartOf="@id/left_region"
        app:layout_constraintEnd_toEndOf="@id/left_region" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:stateListAnimator="@animator/scale_animator"
        android:id="@+id/middle_region"
        android:src="@drawable/ic_island"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.46" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_lock"
        android:id="@+id/lock"
        app:tint="#26000000"
        app:layout_constraintTop_toTopOf="@id/middle_region"
        app:layout_constraintBottom_toBottomOf="@id/middle_region"
        app:layout_constraintStart_toStartOf="@id/middle_region"
        app:layout_constraintEnd_toEndOf="@id/middle_region" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical|start"
        android:text="@string/investland"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/percents" />

    <TextView
        android:id="@+id/percents"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical|start"
        android:text="@string/n_percents"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/title" />

</androidx.constraintlayout.widget.ConstraintLayout>